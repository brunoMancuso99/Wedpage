           <input type="text" name="origen" placeholder="origen" class="form-control">

        </div>

        <div class="form-group">
       
            <input type="text" name="destino" placeholder="destino" class="form-control">
 
         </div>

         <div class="form-group">
       
            <input type="number" name="hsalida" placeholder="hsalida" class="form-control">
 
         </div>

         <div class="form-group">
       
            <input type="number" name="hllegada" placeholder="hllegada" class="form-control">
 
         </div>

         <div class="form-group">
       
            <input type="number" name="idvuelo" placeholder="idvuelo" class="form-control">
 
         </div>

         <button type="submit" class="btn btn-primary" action ="/scr/routes/vuelos.js/add">
             Reservar vuelo
         </button>

         <button type="submit" class="btn btn-info" action ="/scr/routes/vuelos.js/update" >
            Actualizar
