    <div class="row mt-5">

    <div class="col-md-7"> 

        <table>
            <thead>
            
                <tr>idnroVuelo </tr>
                <tr> origen </tr>
                <tr> destino </tr>
                <tr> hsalida </tr> 
                <tr> hllegada </tr>
                <tr> idvuelo </tr>
                <tr> action </tr>

            </thead>

            <tbody>

                <% if (data) { %>
                    <% for(var i=0; i < data.lenght; i++) { %>
