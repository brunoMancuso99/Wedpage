                        <td> <%= (i+1)  %> </td>
                        <td> <%= data[i].origen %> </td>
                        <td> <%= data[i].destino  %> </td>
                        <td> <%= data[i].hsalida  %> </td>
                        <td> <%= data[i].hllegada %> </td>
